<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <!-- Base Layout -->
    <definition name="baseLayout" template="/WEB-INF/layouts/layout.jsp">
        <put-attribute name="title" value="EarthKraft" />
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
    </definition>

    <!-- Index Page -->
    <definition name="index" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/views/index.jsp" />
    </definition>

    <!-- Login Page -->
    <definition name="login" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/views/user/login.jsp" />
    </definition>

    <!-- You can add registration too -->
    <definition name="register" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/views/user/registration.jsp" />
    </definition>

</tiles-definitions>
